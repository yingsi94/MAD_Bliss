<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Back Button -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Back"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvMeditationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Scan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvMeditationSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progressive relaxation"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="48dp" />

        <!-- Circular Progress with Sound Icon -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginBottom="48dp">

            <!-- Circular Progress Bar -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgress"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:indicatorSize="280dp"
                app:trackThickness="12dp"
                app:indicatorColor="#E91E63"
                app:trackColor="#E8D4E8"
                app:trackCornerRadius="6dp"
                android:progress="0"
                android:max="100" />

            <!-- Center Content -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Sound Icon -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_sound"
                    android:layout_marginBottom="16dp"
                    app:tint="#9C9C9C" />

                <!-- Timer -->
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00 / 10 min"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </FrameLayout>

        <!-- Progress Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tvStepProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Step 1 of 13"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 %"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Start/Pause Button -->
        <Button
            android:id="@+id/btnStartPause"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Start"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:elevation="4dp" />
    </LinearLayout>

</RelativeLayout>
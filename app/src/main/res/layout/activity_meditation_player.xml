<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/meditation_gradient_bg">

    <!-- Back Button -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Back"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Theme Name -->
        <TextView
            android:id="@+id/tvThemeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Scan"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Music Name (if playing) -->
        <TextView
            android:id="@+id/tvMusicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocean Waves"
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

        <!-- Circular Progress with Breathing Animation -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginBottom="32dp">

            <!-- Breathing Circle (expands/contracts) -->
            <View
                android:id="@+id/breathingCircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/breathing_circle"
                android:visibility="gone" />

            <!-- Circular Progress Bar -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgress"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:indicatorSize="280dp"
                app:trackThickness="12dp"
                app:indicatorColor="#FFFFFF"
                app:trackColor="#80FFFFFF"
                app:trackCornerRadius="6dp"
                android:progress="0"
                android:max="100" />

            <!-- Center Content -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Timer -->
                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <!-- Breathing Instruction -->
                <TextView
                    android:id="@+id/tvBreathingInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breathe In"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:alpha="0.8" />
            </LinearLayout>
        </FrameLayout>

        <!-- Theme Text Display -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#80FFFFFF"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvThemeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Focus on your breath and let your body relax"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textAlignment="center"
                android:padding="20dp"
                android:minHeight="80dp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Progress Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvTextProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Text 1 of 8"
                android:textSize="14sp"
                android:textColor="#E0E0E0" />

            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="14sp"
                android:textColor="#E0E0E0" />
        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Previous Text Button -->
            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_skip_previous"
                android:contentDescription="Previous"
                app:tint="#FFFFFF"
                android:layout_marginEnd="24dp" />

            <!-- Start/Pause Button -->
            <Button
                android:id="@+id/btnStartPause"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:background="@drawable/button_white_rounded"
                android:elevation="4dp"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <!-- Next Text Button -->
            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_skip_next"
                android:contentDescription="Next"
                app:tint="#FFFFFF"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Volume Control (if music is playing) -->
        <LinearLayout
            android:id="@+id/volumeControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_volume"
                app:tint="#FFFFFF"
                android:layout_marginEnd="12dp" />

            <SeekBar
                android:id="@+id/seekBarVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="70"
                android:progressTint="#FFFFFF"
                android:thumbTint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Body Scan Title -->
        <TextView
            android:id="@+id/tvMeditTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body Scan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvMeditDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 min"
            android:textSize="14sp"
            android:textColor="#A855F7"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tvMeditTitle" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvMeditSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progressive relaxation"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_below="@id/tvMeditTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp" />

        <!-- Play Button -->
        <ImageView
            android:id="@+id/tvMeditPlay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvMeditDuration"
            android:layout_marginTop="8dp"
            android:contentDescription="Play meditation" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>